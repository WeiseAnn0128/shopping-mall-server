.cu_ad{
  font-size:33rpx;
}
/* 没有地址 */
.address-none{
  display: flex;
  align-items:center ;
  justify-content: center;
  height: 80vh;
}
.none-cotent{
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 地址列表 */
.scroll{
  height: 100vh;
  
}
.address-item{
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 18rpx 20rpx;
  margin-bottom:16rpx ;
  margin-top:18rpx ;
  border-radius:16rpx ;
  background: white;

}
.item-top{
  font-size: 29rpx;  
  padding-bottom: 20rpx;
  color: #333;
}
.item-content{
  font-size:28rpx ;
  color: #999;
  padding-bottom: 20rpx;
  margin-bottom:20rpx ;
  border-bottom:1rpx solid #dcdcdc;
}
.item-bottom{
   display: flex;
   align-items: center;
   justify-content: space-between;
   font-size: 24rpx;
   color: #999;
 }
 .item-bottom .right{
   display: flex;
   align-items: center;
   justify-content: flex-end;
 }
 .item-bottom .right.text{
   padding: 0rpx 20rpx;
 }

.address-list{
  display: flex;
  flex-direction: column;
  margin-bottom: 95rpx ;
  padding:16rpx 16rpx 16rpx 16rpx ;
}

/* 添加地址按钮 */
.add-address{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 142rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#fff ;
}
button{
  width: 252rpx;
  height: 60rpx;
}
.add{
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: orange;
  font-size: 31rpx;
  color: #fff;
}