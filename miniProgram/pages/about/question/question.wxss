.show {
  animation: showAni 0.2s;
  animation-fill-mode: forwards;
}

.hidden {
  animation: hiddenAni 0.2s;
  animation-fill-mode: forwards;
}

@keyframes showAni {
  from {
    opacity: 0;
    height: 0;
    padding: 0;
  }
  to {
    opacity: 1;
    height: '';
    padding: '';
  }
}

@keyframes hiddenAni {
  from {
    opacity: 1;
    height: '';
    padding: '';
  }
  to {
    opacity: 0;
    height: 0;
    padding: 0;
  }
}